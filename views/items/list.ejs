<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Item List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">Item List</h2>
      <a href="/items/add" class="btn btn-primary">+ Add Item</a>
    </div>

    <div class="card shadow-lg rounded-4">
      <div class="card-body p-4">
        <% if (items.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped align-middle">
              <thead class="table-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Item Name</th>
                  <th scope="col">Description</th>
                  <th scope="col" class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% items.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><strong><%= item.name %></strong></td>
                    <td><%= item.description %></td>
                    <td class="text-center">
                      <a href="/items/edit/<%= item._id %>" class="btn btn-sm btn-warning me-2">Edit</a>
                      <form action="/items/delete/<%= item._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info mb-0">
            No items found. <a href="/items/add" class="alert-link">Add your first item</a>.
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
